<h2>
	Add a new time entry for <%=@my_project.name%>
</h2>




<% if @my_entry.error.any? %>
	<ul>
		<%@my_entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %> </li>
			<% end %>
	</ul>
<% end %>


<%= form_for [@my_project, @my_entry] do |f| %>
	<%=f.label :hours %>
	<%= f.number_field :hours%>
	<br>
	<%= f.label :minutes %>
	<%= f.number_field :minutes %>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date %>
	<br>
	<%= f.label :comment %>
	<%= f.text_field :comment %>
	<br>

	<%= f.button %>
<% end %>